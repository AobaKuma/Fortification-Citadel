  <ThingDef ParentName="BenchBase">
    <defName>FTC_FieldKitchen</defName>
    <label>field kitchen</label>
    <description>A mobile kitchen setup that can provide meals to troops in remote or frontline locations. Can only cook basic meals. Must be periodically refueled with wood or chemfuel.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Things/FieldKitchen/building</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
      <shadowData>
        <volume>(1, 0.6, 1)</volume>
      </shadowData>
    </graphicData>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.0</staticSunShadowHeight>
    <costList>
      <Steel>80</Steel>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
      <Cleanliness>-2</Cleanliness>
      <WorkTableEfficiencyFactor>0.9</WorkTableEfficiencyFactor>
    </statBases>
    <size>(3,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>ButcherCorpseFlesh</li>
      <li>Make_Kibble</li>
      <li>Make_Pemmican</li>
      <li>Make_PemmicanBulk</li>
      <li>CookMealSimple</li>
      <li>CookMealSimpleBulk</li>
      <li>FTC_KitchenCookMealSimple</li>
	  <!-- Vanilla Cooking Expanded Integrations -->	
	  <li MayRequire="VanillaExpanded.VCookE">VCE_DeepFryMeats</li>
	  <li MayRequire="VanillaExpanded.VCookE">VCE_DeepFryVegetables</li>
	  <li MayRequire="VanillaExpanded.VCookE">VCE_CookGrillSimple</li>
	  <li MayRequire="VanillaExpanded.VCookE">VCE_CookGrillSimpleBulk</li>  
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <isMealSource>true</isMealSource>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <researchPrerequisites>
      <li>Smithing</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>100.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialConfigurableTargetFuelLevel>50</initialConfigurableTargetFuelLevel>
        <autoRefuelPercent>0.8</autoRefuelPercent>
        <drawFuelGaugeInMap>true</drawFuelGaugeInMap>
        <showFuelGizmo>true</showFuelGizmo>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
		<functionsInVacuum>false</functionsInVacuum>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>4</heatPerSecond>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

