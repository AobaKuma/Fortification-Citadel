  <WorkGiverDef>
    <defName>FT_OperateFurnace</defName>
    <label>Operate furnace</label>
    <giverClass>Fortified.WorkGiver_DoAutonomousBill</giverClass>
    <workType>Hauling</workType>
    <priorityInType>125</priorityInType>
    <fixedBillGiverDefs>
